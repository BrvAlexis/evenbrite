<h2><%= resource_name.to_s.humanize %></h2>
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <!-- Formulaire d'Édition de Profil -->
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Édition de Profil</h5>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <!-- Champ Email -->
            <div class="mb-3">
              <%= f.label :email, class: "form-label" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>En attente de confirmation pour : <%= resource.unconfirmed_email %></div>
            <% end %>

            <!-- Champ Mot de Passe -->
            <div class="mb-3">
              <%= f.label :password, "Mot de Passe", class: "form-label" %> <i>(laissez vide si vous ne souhaitez pas le changer)</i><br />
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
              <% if @minimum_password_length %>
                <br />
                <em><%= @minimum_password_length %> caractères minimum</em>
              <% end %>
            </div>

            <!-- Champ Confirmation du Mot de Passe -->
            <div class="mb-3">
              <%= f.label :password_confirmation, "Confirmer Mot de Passe", class: "form-label" %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
            </div>

            <!-- Champ Mot de Passe Actuel -->
            <div class="mb-3">
              <%= f.label :current_password, "Mot de Passe Actuel", class: "form-label" %> <i>(nous avons besoin de votre mot de passe actuel pour confirmer vos modifications)</i><br />
              <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
            </div>

            <!-- Bouton de Mise à Jour -->
            <div class="text-center">
              <%= f.submit "Mettre à Jour", class: "btn btn-secondary" %>
            </div>
          <% end %>

          <h3>Annuler mon compte</h3>
          <div>Vous n'êtes pas satisfait ? <%= button_to "Annuler mon compte", registration_path(resource_name), data: { confirm: "Êtes-vous sûr ?", turbo_confirm: "Êtes-vous sûr ?" }, method: :delete, class: "btn btn-danger" %></div>

          <%= link_to "Retour", :back, class: "btn btn-outline-secondary mt-3" %>
        </div>
      </div>
    </div>
  </div>
</div>

<%= link_to "Back", :back %>
