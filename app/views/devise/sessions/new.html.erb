<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <!-- Formulaire de Connexion -->
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Connexion</h5>
                    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                        <!-- Champ Email -->
                        <div class="mb-3">
                            <%= f.label :email, class: "form-label" %>
                            <%= f.email_field :email, class: "form-control", id: "email", placeholder: "votre@email.com" %>
                        </div>

                        <!-- Champ Mot de passe -->
                        <div class="mb-3">
                            <%= f.label :password, class: "form-label" %>
                            <%= f.password_field :password, class: "form-control", id: "motDePasse", placeholder: "********" %>
                        </div>

                        <!-- Bouton de Connexion -->
                        <div class="mb-3">
                            <%= f.submit "Se connecter", class: "btn btn-secondary" %>
                        </div>
                    <% end %>
                    <div class="text-center">
                        <%= render "devise/shared/links", class: "btn btn-outline-secondary" %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



