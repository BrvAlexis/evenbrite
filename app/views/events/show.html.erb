<div class="container mt-5">
  <h1><%= @event.title %></h1>
  <p><%= @event.description %></p>

  <ul>
    <li>Nombre d'inscrits : <%= @event.participants.count %></li>
    <li>Créateur : <%= @event.user.email %></li>
    <li>Date de début : <%= @event.start_date.strftime("%d %B %Y %H:%M") %></li>
    <li>Date de fin : <%= @event.end_date.strftime("%d %B %Y %H:%M") %></li>
    <li>Lieu : <%= @event.location %></li>
    <li>Prix : <%= number_to_currency(@event.price) %></li>
  </ul>
</div>

<% if user_signed_in? && current_user != @event.user && !current_user.attendances.exists?(event_id: @event.id) %>
<%= link_to "Rejoindre l'événement", new_event_attendance_path(@event), class: 'btn btn-success' %>


<% end %>

<% if current_user == @event.user %>
<%= link_to "Mon espace événement", event_path(@event) %>
<% end %>

<% if @guests_link %>
  <%= link_to "Liste des invités", @guests_link %>
<% end %>

<% if current_user == @event.user %>
  <%= button_to "Supprimer l'événement", @event, method: :delete, data: { confirm: "Êtes-vous sûr?" }, class: "btn btn-danger" %>
<% end %>
